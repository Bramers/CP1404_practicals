BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_number
            text: ''
            multiline: False
            size_hint: 2, 1
            on_text: app.handle_calculate(input_number.text)
        BoxLayout:
            orientation: 'vertical'
            Button:
                text: 'Up'
                on_press: app.handle_increment(input_number.text, 1)
            Button
                text: 'Down'
                on_press: app.handle_increment(input_number.text, -1)
#    Button:
#        text: 'Convert miles to km'
#        on_press: app.handle_calculate(input_number.text)
    Label
        id: output_label
        text: app.message
